<body ng-app="login" ng-controller="login">

<div class="wrapper">
    <div data-image="./assets/img/sidebar-5.jpg"></div>
    <div class="main-panel">
        <div class="container-fluid">
            <div class="collapse navbar-collapse">
                <div class="content">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-md-8">
                                <div class="card">
                                    <div class="header">
                                        <h4 class="title">Please Login</h4>
                                    </div>
                                    <div class="content">
                                        <form>
                                            <div class="row">
                                                <div class="col-sm-6 col-sm-offset-3 form-box">
                                                    <div class="form-top">
                                                        <div class="form-top-left">
                                                            <h3>Welcome to Log-Based Cloud Monitoring for OpenStack</h3>
                                                            <p>Enter your username and password to log on:</p>
                                                        </div>
                                                        <div class="form-top-right">
                                                            <i class="fa fa-lock"></i>
                                                        </div>
                                                    </div>
                                                    <div class="form-bottom">
                                                        <form role="form" action="" method="post" class="login-form">
                                                            <div class="form-group">
                                                                <label class="sr-only" for="form-username">Username</label>
                                                                <input type="text" name="email" class="form-control"  name="email" ng-model='email'autofocus required>
                                                            </div>
                                                            <div class="form-group">
                                                                <label class="sr-only" for="form-password">Password</label>
                                                                <input type="password" name="password" class="form-control"  name="password" ng-model='password' required>
                                                            </div>
                                                            <button type="submit" class="btn" ng-click="submit()">Login</button><br>
                                                        </form>
                                                       <br> <div ng-show="invalid_login" class="alert alert-warning">
                                                            <strong>Warning!</strong> Incorrect Username/Password
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


